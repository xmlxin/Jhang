<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".activity.animation.EditActivity">

    <com.xiaoxin.feng.jhang.widget.randomTextView.RandomShowTextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:textColor="@android:color/holo_blue_dark"
        app:duration="3000"
        app:text="孤单不是与生俱来，而是由你爱上一个人的那一刻开始" />

    <com.xiaoxin.feng.jhang.widget.edit.BiuEditText
        android:id="@+id/biu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:hint="biu,biu,发射1号"
        android:textColor="@android:color/white"
        app:biu_duration="800"
        app:biu_text_color="@android:color/white"
        app:biu_text_scale="1.5"
        app:biu_text_start_size="12sp"
        app:biu_type="flydown" />


    <com.xiaoxin.feng.jhang.widget.edit.BiuEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="biu,biu,发射2号"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        app:biu_duration="800"
        app:biu_text_color="@android:color/white"
        app:biu_text_scale="1.5"
        app:biu_text_start_size="12sp"
        app:biu_type="flyup" />

</LinearLayout>