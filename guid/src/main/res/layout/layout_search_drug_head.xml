<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@drawable/ic_titlebar_back" />

    <FrameLayout
        android:layout_toRightOf="@id/iv_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_search"
            android:hint="请输入药品名称"
            android:textColorHint="@color/color_99"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_search_after"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:paddingLeft="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/drug_search_bg"
            android:layout_toRightOf="@id/iv_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_clear"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/ic_searb_clear"
            android:padding="@dimen/dp_8"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </FrameLayout>



</RelativeLayout>
