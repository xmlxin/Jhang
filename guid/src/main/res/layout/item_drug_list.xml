<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fl_img"
            android:gravity="center"
            android:layout_margin="@dimen/dp_5"
            android:layout_width="80dp"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/iv_drug_img"
                android:layout_centerVertical="true"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/tv_cfy"
                android:text="处方药"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_3"
                android:background="@drawable/drug_cf_bg"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </FrameLayout>


            <RelativeLayout
                android:layout_toRightOf="@id/fl_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_brand_name"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="搏击"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#000000"
                    android:paddingRight="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_manufacturer"
                    android:layout_below="@id/tv_brand_name"
                    android:paddingTop="@dimen/dp_2"
                    android:text="厂家"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_packing_product"
                    android:layout_below="@id/tv_manufacturer"
                    android:text="规格"
                    android:paddingTop="@dimen/dp_2"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_below="@id/tv_packing_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_unit_price"
                        android:layout_centerVertical="true"
                        android:text="¥价格"
                        android:paddingTop="@dimen/dp_2"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:paddingRight="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_cut_drug"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical|right"
                            android:alpha="0"
                            android:src="@drawable/ic_cut_drug"/>

                        <TextView
                            android:id="@+id/tv_count"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:textColor="#323232"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:alpha="0"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="16sp"/>


                        <ImageView
                            android:id="@+id/iv_add_drug"
                            android:background="@drawable/ic_add_drug"
                            android:layout_gravity="center_vertical|right"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                        <ImageView
                            android:id="@+id/tv_add"
                            android:background="@drawable/ic_jia"
                            android:padding="@dimen/dp_20"
                            android:layout_centerVertical="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                    </RelativeLayout>
                </RelativeLayout>


            </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
